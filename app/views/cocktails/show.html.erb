<div class="container text-center">
<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo, height: 400, width: 250, crop: :fill %>
<h3>Doses:</h3>
<% @cocktail.doses.each do |dose| %>
  <h3><%= dose.description %></h3>
  <h3><%= dose.ingredient.name %></h3>
  <%= link_to "Delete this dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this dose?" } %>
<% end %>
</div>

<div class="row">
    <div class="col-md-2 col-md-offset-5">
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
      <%= link_to "Delete this cocktail", cocktail_path,
        method: :delete,
        data: { confirm: "Are you sure you want to delete this cocktail?" } %>
    </div>
</div>
